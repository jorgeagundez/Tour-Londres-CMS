{% extends "::admin_base.html.twig" %}
{% block title %}TourLondresDashboardBundle:Admintours:list{% endblock %}

{% block body %}

	<div class="listWrap">
        <div class="form-group">
            <div class="row ">
                <div class="col-md-12">
                    <h3 class="adminTitle">Lista de Tours</h3>
                </div>
            </div>

            {% for flashMessage in app.session.flashbag.get('notice') %}
                <div class="flash-notice">
                    <div class="alert alert-success" role="alert">
                        {{ flashMessage }}
                    </div>
                </div>
            {% endfor %}
            
            <table class="table">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Tipo</th>
                        <th>Estado</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for tour in tours %}
                        <tr>
                            <td scope="row">{{ tour.esname }}</td>
                            <td>{{ tour.estype }}</td>
							<td>
								{% if tour.available %}
									<a href="{{ path('tourlondres_dashboard_admintours_available', {'id': tour.id}) }}" class="available_online btn-xs btn btn-success">Online</a>
								{% else %}
									<a href="{{ path('tourlondres_dashboard_admintours_available', {'id': tour.id}) }}" class="available_offline btn-xs btn btn-danger">Offline</a>
								{% endif %}
							</td>
                            <td><a href="{{ path('tourlondres_dashboard_admintours_edit', {'id': tour.id}) }}" class="edit btn btn-info btn-xs pull-right">Edit</a></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

            <div class="row">
                <div class="col-md-12">
                    <a href="{{ path('tourlondres_dashboard_admintours_add') }}" class="edit btn btn-primary pull-right">A침adir Tour</a>
                </div>
            </div>

        </div>
    </div>

    <script>
    
    $('a.available_online').click(function(){
        if (!confirm('Vas a desabilitar este Tour. No se borrar치, s칩lo quedar치 oculto. Estas seguro?')) {
            return false;
        }
    });

    $('a.available_offline').click(function(){
        if (!confirm('Estas seguro de que quieres publicar este tour?')) {
            return false;
        }
    });

    </script>

{% endblock %}
