<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="Tours gratis en Londres en Español" />
        <meta name="keywords" content="tour, tours, londres, london, london city, gratis, free, español, spanish, castellano, grupos, group" />
        <meta name="robots" content="..." />
        <title>{% block title %}Tour Londres{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" media="screen" href="{{ asset('/tourlondres-symfony/web/bootstrap/css/bootstrap.css') }}"/>
            <link rel="stylesheet" type="text/css" media="screen" href="{{ asset('/tourlondres-symfony/web/css/style.css') }}"/>
            <link rel="stylesheet" type="text/css" media="screen" href="{{ asset('/tourlondres-symfony/web/css/color.css') }}"/>
            <link rel="stylesheet" type="text/css" media="screen" href="{{ asset('/tourlondres-symfony/web/css/responsive.css') }}"/>
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('/tourlondres-symfony/web/images/favicon.png') }}" />
        <!-- jquery -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
        {% set locale = app.request.locale %}
    </head>
    <body {% if template is defined %} class="{{ template }}" {% endif %}>

        {% if locale == 'es' %}
            {% include "es_header.html.twig" %}
            {% include "es_nav.html.twig" %}
        {% elseif locale == 'en' %}
            {% include "en_header.html.twig" %}
            {% include "en_nav.html.twig" %}
        {% endif %}
        

        {% block body %}{% endblock %}

        {% include "footer.html.twig" %}
        {% block javascripts %}
            <!-- Include all compiled plugins (below), or include individual files as needed -->
            <script src="{{ asset('/tourlondres-symfony//web/bootstrap/js/bootstrap.js') }}"></script>
            <!-- Controller -->
            <script src="{{ asset('/tourlondres-symfony//web/js/control.js') }}"></script>
        {% endblock %}
    </body>
</html>
