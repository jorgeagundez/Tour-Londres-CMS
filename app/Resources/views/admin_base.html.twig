<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Admin Panel{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" media="screen" href="{{ '/tourlondres-symfony/web/bootstrap/css/bootstrap.css' }}"/>
            <link rel="stylesheet" type="text/css" media="screen" href="{{ '/tourlondres-symfony/web/css/style.css' }}"/>
            <link rel="stylesheet" type="text/css" media="screen" href="{{ '/tourlondres-symfony/web/css/color.css' }}"/>
            <link rel="stylesheet" type="text/css" media="screen" href="{{ '/tourlondres-symfony/web/css/responsive.css' }}"/>
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('/web/images/favicon.png') }}" />
        <!-- jquery -->

    </head>
    <body>

        {% include "admin_header.html.twig" %}

        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <nav class="adminNav">
                        <ul>
                            <li><a href="{{ path('tourlondres_dashboard_admintours_list') }}">Administrar Tours</a></li>
                        </ul>
                    </nav>
                </div>
                <div class="col-md-8">
                    {% block body %}{% endblock %}
                </div>
            </div>
        </div>

        {% include "footer.html.twig" %}
        {% block javascripts %}
            <!-- Include all compiled plugins (below), or include individual files as needed -->
            <script src="{{ asset('/tourlondres-symfony//web/bootstrap/js/bootstrap.js') }}"></script>
            <!-- Controller -->
            <script src="{{ asset('/tourlondres-symfony//web/js/control.js') }}"></script>
        {% endblock %}
    </body>
</html>
